<Window x:Class="GameKeyManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Key Manager" 
        Height="700" 
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Nav Button Style -->
        <Style x:Key="ActiveNavButton" BasedOn="{StaticResource NavButton}" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Padding="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- App Title -->
                <Border Grid.Row="0" Padding="20,20,20,10">
                    <TextBlock Text="Game Key Manager"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"/>
                </Border>

                <!-- Navigation Menu -->
                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <!-- Library navigation button -->
                    <Button x:Name="BtnLibrary" 
                            Content="📚 My Library" 
                            Style="{StaticResource ActiveNavButton}"
                            Click="BtnLibrary_Click"/>
                    <!-- Addgame navigation button -->
                    <Button x:Name="BtnAddGame" 
                            Content="➕ Add Game" 
                            Style="{StaticResource NavButton}"
                            Click="BtnAddGame_Click"/>
                    <!-- Settings navigation button -->
                    <Button x:Name="BtnSettings" 
                            Content="⚙️ Settings" 
                            Style="{StaticResource NavButton}"
                            Click="BtnSettings_Click"/>
                    <Separator Background="#3E3E42" Margin="10,20" Height="1"/>
                    <!-- Login navigation button -->
                    <Button x:Name="BtnLogin" 
                            Content="⚿ Login" 
                            Style="{StaticResource NavButton}"
                            Click="BtnLogin_Click"/>
                    <!-- Account navigation button -->
                    <Button x:Name="BtnAccount" 
                            Content="👤 Account" 
                            Style="{StaticResource NavButton}"
                            Click="BtnAccount_Click"/>
                    <!-- Logout navigation button -->
                    <Button x:Name="BtnLogout" 
                            Content="⏻ Logout" 
                            Style="{StaticResource NavButton}"
                            Click="BtnAccount_Click"/>
                </StackPanel>

                <!-- Cloud Status -->
                <Border Grid.Row="2" Padding="20" Background="#252526">
                    <StackPanel>
                        <TextBlock x:Name="TxtCloudStatus" 
                                   Text="☁️ Cloud: Not Connected"
                                   Foreground="#CCCCCC"
                                   FontSize="12"/>
                        <TextBlock x:Name="TxtLastSync" 
                                   Text="Local storage only"
                                   Foreground="#888888"
                                   FontSize="11"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="#1E1E1E">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Bar -->
            <Border Grid.Row="0" Background="#2D2D30" Padding="20,15" BorderBrush="#3E3E42" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Page Title and Search -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock x:Name="TxtPageTitle" 
                                   Text="My Game Library"
                                   Foreground="White"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="BtnSync" 
                                Content="🔄 Sync"
                                Style="{StaticResource ModernButton}"
                                Click="BtnSync_Click"/>
                        <Button x:Name="BtnBackup" 
                                Content="💾 Backup"
                                Style="{StaticResource ModernButton}"
                                Click="BtnBackup_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Views Container -->
            <Border Grid.Row="1" Padding="20">
                <!-- This Grid will be used as a container for dynamically loaded views -->
                <Grid x:Name="ContentContainer">
                    <!-- Views will be added/removed here programmatically -->
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>